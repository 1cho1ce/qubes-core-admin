<hostdev type="pci" managed="yes"
{% if vm.features.get('pci-no-strict-reset/' + device.ident, False) %}
 nostrictreset="yes"
{% endif %}
>
    <source>
        <address
            bus="0x{{ device.bus }}"
            slot="0x{{ device.device }}"
            function="0x{{ device.function }}" />
    </source>
</hostdev>

