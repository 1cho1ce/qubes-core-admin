<interface type="ethernet">
    <mac address="{{ vm.mac }}" />
    <ip address="
        {%- if prepare_dvm -%}
            %IP%
        {%- else -%}
            {{ vm.ip }}
        {%- endif %}" />
    <backenddomain name="{{ vm.netvm.name }}" />
    <script path="vif-route-qubes"></script>
</interface>

